<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sunxl8.my_weibo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".ui.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity"/>
        <activity android:name=".ui.visitor.VisitorMainActivity"/>
        <activity android:name=".ui.setting.SettingActivity"/>
        <activity android:name=".ui.visitor.VisitorSettingActivity"/>
        <activity android:name=".ui.setting.AccountManagerActivity"/>
        <activity android:name=".ui.weibo.ImgActivity"/>
        <activity android:name=".ui.weibo.WeiboActivity"/>
        <activity android:name=".ui.profile.FriendsActivity"/>
    </application>

</manifest>