<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_navigation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorBgTabbar"
            android:elevation="3dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp">

            <TextView
                android:id="@+id/tv_navigation_addfriend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:text="@string/navigation_addfriend"
                android:textColor="@drawable/selector_navigationbar_text"
                android:textSize="@dimen/navigation_text_size"/>

            <TextView
                android:id="@+id/tv_navigation_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/navigation_profile"
                android:textColor="@color/colorTextNavigation"
                android:textSize="@dimen/navigation_text_size"/>

            <TextView
                android:id="@+id/tv_navigation_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:text="@string/navigation_setting"
                android:textColor="@drawable/selector_navigationbar_text"
                android:textSize="@dimen/navigation_text_size"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_common_item"
                android:clickable="true"
                android:minHeight="100dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile_headicon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/iv_profile_headicon"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextProfilePrimary"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_profile_brief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorTextProfileSecondary"
                        android:textSize="13sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_profile_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextNomalHighlight"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/colorLineCommon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_profile_weibo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_common_item"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_profile_weibo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorTextProfilePrimary"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/weibo"
                        android:textColor="@color/colorTextProfileSecondary"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_profile_attention"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_common_item"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_profile_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorTextProfilePrimary"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/attention"
                        android:textColor="@color/colorTextProfileSecondary"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_profile_fans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_common_item"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_profile_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorTextProfilePrimary"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/fans"
                        android:textColor="@color/colorTextProfileSecondary"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <sunxl8.my_weibo.widget.ProfileItemView
            android:id="@+id/view_profile_item_newfriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:icon="@drawable/profile_newfriend"
            app:title="@string/new_friend"/>

        <sunxl8.my_weibo.widget.ProfileItemView
            android:id="@+id/view_profile_item_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:icon="@drawable/profile_newfriend"
            app:title="@string/my_photo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/colorLineCommon"/>

        <sunxl8.my_weibo.widget.ProfileItemView
            android:id="@+id/view_profile_item_praise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/profile_newfriend"
            app:title="@string/my_praise"/>

        <sunxl8.my_weibo.widget.ProfileItemView
            android:id="@+id/view_profile_item_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:icon="@drawable/profile_newfriend"
            app:title="@string/weibo_wallet"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/colorLineCommon"/>

        <sunxl8.my_weibo.widget.ProfileItemView
            android:id="@+id/view_profile_item_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/profile_newfriend"
            app:title="@string/weibo_sport"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/colorLineCommon"/>

        <sunxl8.my_weibo.widget.ProfileItemView
            android:id="@+id/view_profile_item_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/profile_newfriend"
            app:title="@string/avoid_flow"/>

    </LinearLayout>
</ScrollView>